datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  previewFeatures = ["nativeTypes"]
  provider        = "prisma-client-js"
}

model SomeData {
  id        String    @id
  required Boolean
  number   Int     @db.SmallInt
}

model Participant {
  id          String @id
  name        String
  mailAddress String @unique
  status      String // TODO: 別テーブルにする
}

model Pair {
  id          String @id
  name        String @unique
}

model PairParticipant {
  pairID        String
  participantID String
  
  @@id([pairID, participantID])
}
